<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Library Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/public/style.css">
    <style>
        body {
            background-color: #f5e6d7;
            color: #5a3e2b;
            font-family: 'Arial', sans-serif;
        }
        .container {
            max-width: 800px;
            margin: auto;
            padding-top: 20px;
        }
        .btn-custom {
            background-color: #8b5e3c;
            color: white;
            border-radius: 8px;
            transition: 0.3s;
        }
        .btn-custom:hover {
            background-color: #6f432a;
        }
        .table thead {
            background-color: #8b5e3c;
            color: white;
        }
        .card {
            background-color: #fdf6eb;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            padding: 15px;
            margin-bottom: 15px;
        }
        .form-control, .form-select {
            background-color: #fffaf0;
            border: 1px solid #8b5e3c;
            color: #5a3e2b;
            border-radius: 6px;
        }

        .btn-brown {
            background-color: #8B4513; /* Коричневый цвет */
            border-color: #6A2C0F; /* Темнее для границы */
            color: white; /* Белый текст */
        }
        
        .btn-brown:hover {
            background-color: #A0522D; /* Светло-коричневый при наведении */
            border-color: #733D1A;
        }
        
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Library System</h1>

        <!-- Search Books -->
        <form action="/books" method="get" class="mb-4">
            <div class="row g-2">
                <div class="col-md-5">
                    <input type="text" name="search" class="form-control" placeholder="Search by title...">
                </div>
                <div class="col-md-5">
                    <input type="text" name="genre" class="form-control" placeholder="Genre">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-brown w-100 rounded shadow-sm">Search</button>
                </div>
            </div>
        </form>

        <!-- Add a Book -->
        <h2>Add a Book</h2>
  <form id="addBookForm" class="mb-4">
    <div class="row g-2">
      <div class="col-md-4">
        <input type="text" id="title" class="form-control" placeholder="Title" required>
      </div>
      <div class="col-md-4">
        <input type="text" id="author" class="form-control" placeholder="Author" required>
      </div>
      <div class="col-md-4">
        <select id="genre" class="form-control">
          <option value="Fiction">Fiction</option>
          <option value="Non-Fiction">Non-Fiction</option>
          <option value="Science">Science</option>
          <option value="History">History</option>
          <option value="Fantasy">Fantasy</option>
        </select>
        </div>
        <div class="col-md-12 text-center mt-2">
            <button type="submit" class="btn btn-brown w-100 rounded shadow-sm">Add Book</button>
        </div>
    </div>
  </form>

        <!-- Issue a Book -->
        <h2>Issue a Book</h2>
        <form action="/issues/add" method="post" class="mb-4">
            <div class="row g-2">
                <div class="col-md-4">
                    <input type="text" name="readerName" class="form-control" placeholder="Reader's Name" required>
                </div>
                <div class="col-md-4">
                    <input type="number" name="readerId" class="form-control" placeholder="Reader's ID" required>
                </div>
                <div class="col-md-4">
                    <select name="bookId" class="form-select" required>
                        <option value="">Select a Book</option>
                        <% books.forEach(book => { if (!book.issuedTo) { %>
                            <option value="<%= book._id %>"><%= book.title %> by <%= book.author %></option>
                        <% } }); %>
                    </select>
                </div>
                <div class="col-md-12 text-center mt-2">
                    <button type="submit" class="btn btn-brown w-100 rounded shadow-sm">Issue Book</button>
                </div>
            </div>
        </form>

        <!-- Book List -->
        <h2>Book List</h2>
        <div class="list-group">
            <% books.forEach(book => { %>
                <div class="list-group-item d-flex justify-content-between align-items-start">
                    <div>
                        <h5 class="mb-1"><%= book.title %></h5>
                        <small class="text-muted">by <%= book.author %></small>
                        <p class="mb-1 text-muted">Genre: <%= book.genre %></p>
                        <% if (book.issuedTo) { %>
                            <p class="text-danger mb-0">
                                Issued to: <%= book.issuedTo %>, Return by: 
                                <%= book.returnDate ? book.returnDate.toLocaleDateString() : 'N/A' %>
                            </p>
                            <!-- Добавляем кнопку для возврата книги -->
                            <form action="/books/return/<%= book._id %>" method="post" class="d-inline">
                                <button type="submit" class="btn btn-brown btn-sm rounded shadow-sm px-3">Return Book</button>
                            </form>
                        <% } %>
                    </div>
                    <div>
                        <form action="/books/delete/<%= book._id %>" method="post" class="d-inline">
                            <button type="submit" class="btn btn-brown btn-sm rounded shadow-sm px-3">Delete</button>
                        </form>
                        <button class="btn btn-brown btn-sm rounded shadow-sm px-3" 
                                onclick="showEditForm('<%= book._id %>', '<%= book.title %>', '<%= book.author %>', '<%= book.genre %>')">
                            Edit
                        </button>
                    </div>
                </div>
            <% }); %>
        </div>
        

        <!-- Edit Book Form -->
        <div id="editForm" style="display:none; margin-top: 20px;">
            <h2>Edit Book</h2>
            <form id="editBookForm" method="post">
                <input type="hidden" name="id" id="editBookId">
                <div class="mb-3">
                    <label for="editTitle" class="form-label">Title</label>
                    <input type="text" class="form-control" id="editTitle" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="editAuthor" class="form-label">Author</label>
                    <input type="text" class="form-control" id="editAuthor" name="author" required>
                </div>
                <div class="mb-3">
                    <label for="editGenre" class="form-label">Genre</label>
                    <select class="form-control" id="editGenre" name="genre">
                        <option value="Fiction">Fiction</option>
                        <option value="Non-Fiction">Non-Fiction</option>
                        <option value="Science">Science</option>
                        <option value="History">History</option>
                        <option value="Fantasy">Fantasy</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-success">Update Book</button>
                <button type="button" class="btn btn-secondary" onclick="hideEditForm()">Cancel</button>
            </form>
        </div>
    </div>

    <script>
        function showEditForm(id, title, author, genre) {
            document.getElementById('editBookId').value = id;
            document.getElementById('editTitle').value = title;
            document.getElementById('editAuthor').value = author;
            document.getElementById('editGenre').value = genre;
            document.getElementById('editBookForm').action = '/books/update/' + id;
            document.getElementById('editForm').style.display = 'block';
            window.scrollTo(0, document.body.scrollHeight);
        }

        function hideEditForm() {
            document.getElementById('editForm').style.display = 'none';
        }
        document.getElementById('addBookForm').addEventListener('submit', async function(event) {
            event.preventDefault(); // Предотвращаем стандартную отправку формы
        
            const title = document.getElementById('title').value.trim();
            const author = document.getElementById('author').value.trim();
            const genre = document.getElementById('genre').value;
        
            if (!title || !author) {
                alert('Please fill in all fields!');
                return;
            }
        
            const response = await fetch('/books/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ title, author, genre })
            });
        
            if (response.ok) {
                location.reload(); // Обновляем страницу, чтобы увидеть новую книгу
            } else {
                alert('Failed to add book.');
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>